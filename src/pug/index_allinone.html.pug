doctype html
html(lang="ja")
    head
        link(rel="icon" href=PUBLIC_URL + "/favicon.svg" type="image/svg+xml")

        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        meta(name="theme-color" content="#000000")
        meta(name="description" content="Web Piano")
        title Piano
        style(inline inline-asset="main.css" inline-asset-delete)
    body
        noscript You need to enable JavaScript to run this app.
        div#__background
            div#root(tabindex="-1")
                div.control_panel
                    include header/menu
                div.scroll_container
                    div.sheet
                        include score/score
                    div.keyboard
                        include keyboard/keyboard
        script(inline inline-asset="main.js" inline-asset-delete)
            
